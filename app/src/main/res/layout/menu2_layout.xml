<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formula"
        android:id="@+id/FormulaCheckBox"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="119dp"
        android:checked="false"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diapers"
        android:id="@+id/DiapersCheckBox2"
        android:layout_below="@+id/FormulaCheckBox"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baby Wipes"
        android:id="@+id/BabyWipesCheckBox3"
        android:layout_below="@+id/DiapersCheckBox2"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baby Lotion"
        android:id="@+id/BabyLotionCheckBox4"
        android:layout_below="@+id/BabyWipesCheckBox3"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baby Shampoo"
        android:id="@+id/BabyShampooCheckBox5"
        android:layout_below="@+id/BabyLotionCheckBox4"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baby Powder"
        android:id="@+id/BabyPowderCheckBox6"
        android:layout_below="@+id/BabyShampooCheckBox5"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purified Baby Water"
        android:id="@+id/BabyWaterCheckBox"
        android:layout_below="@+id/BabyPowderCheckBox6"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baby Body Wash"
        android:id="@+id/BabyBodyWashCheckBox"
        android:layout_below="@+id/BabyWaterCheckBox"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textSize="20dp" />
</RelativeLayout>